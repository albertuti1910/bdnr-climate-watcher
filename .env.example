# OpenWeatherMap API
OPENWEATHER_API_KEY=your_api_key_here

# MongoDB Configuración
MONGO_INITDB_ROOT_USERNAME=admin_username
MONGO_INITDB_ROOT_PASSWORD=admin_password
MONGO_PORT=27017
MONGO_URI=mongodb://admin:password@mongodb:27017/
MONGO_DB_NAME=weather_db

# Configuración del recolector de datos
COLLECTION_INTERVAL=3600

# Configuración del API/Dashboard
API_PORT=5000
API_HOST=0.0.0.0
API_DEBUG=false
API_RATE_LIMIT=100/minute
CACHE_TIMEOUT=300

# Bot de Telegram (opcional)
ENABLE_TELEGRAM=false
TELEGRAM_TOKEN=your_telegram_bot_token
CHECK_INTERVAL=3600
TELEGRAM_ADMIN_ID=your_telegram_user_id

# Configuración de alertas por correo (opcional)
ENABLE_EMAIL=false
EMAIL_FROM=tu_email@ejemplo.com
EMAIL_TO=destinatario1@ejemplo.com,destinatario2@ejemplo.com
EMAIL_PASSWORD=tu_password_email

# Umbrales para alertas meteorológicas
THRESHOLD_TEMP_HIGH=35.0
THRESHOLD_TEMP_LOW=0.0
THRESHOLD_WIND=20.0
THRESHOLD_HUMIDITY=95.0
THRESHOLD_RAIN=10.0

# Analizador de datos (opcional)
OUTPUT_DIR=/app/data
ANALYSIS_INTERVAL=86400
ANALYSIS_DAYS=180
GENERATE_PLOTS=true
PLOT_FORMAT=png

# Configuración de puertos externos
MONGO_EXTERNAL_PORT=27017
API_EXTERNAL_PORT=5000

# Configuración de directorios de persistencia
DATA_DIR=./data
ANALYSIS_DIR=./analysis

# Nombres para volúmenes y redes
MONGO_VOLUME_NAME=mongo_weather_data
NETWORK_NAME=weather_network

# Security Configuration
API_KEY_HEADER=X-API-Key
API_KEY=your_api_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_REDIS_URL=redis://redis:6379/0  # Optional, for Redis cache

# Rate Limiting Configuration
RATE_LIMIT_STORAGE_URL=redis://redis:6379/1  # Optional, for Redis rate limiting
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_ENABLED=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc_dir